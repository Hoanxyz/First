<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logox.png</argument>
                <argument name="logo_width" xsi:type="number">500</argument>
                <argument name="logo_height" xsi:type="number">85</argument>
                <argument name="logo_alt" xsi:type="string">Logo name</argument>
            </arguments>
        </referenceBlock>
        
        <!-- remove header panel -->
        <referenceContainer name="header.panel" remove="true" />

        <!-- call pharmacy login bar to header -->
        <referenceBlock name="header-wrapper">
    		<block class="Magento\Framework\View\Element\Template" name="pharmacy.login" template="Magento_Cms::pharmacylogin.phtml" before="-"/>
    	</referenceBlock>

       

        <!-- call rtb -->
        <referenceBlock name="page.top">
    		<block class="Magento\Framework\View\Element\Template" name="rtb" template="Magento_Cms::rtb.phtml" before="breadcrumbs" />
    	</referenceBlock>

    </body>
</page>