<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logox.png</argument>
                <argument name="logo_width" xsi:type="number">500</argument>
                <argument name="logo_height" xsi:type="number">85</argument>
                <argument name="logo_alt" xsi:type="string">Logo name</argument>
            </arguments>
        </referenceBlock>
        
        <!-- remove header panel -->
        <referenceContainer name="header.panel" remove="true" />

        <!-- call pharmacy login bar to header -->
        <referenceBlock name="header.container">
    		<block class="Magento\Framework\View\Element\Template" name="pharmacy.login" template="Magento_Cms::pharmacylogin.phtml" before="main.content" />
    	</referenceBlock>

        <!-- call rtb -->
        <referenceBlock name="page.wrapper">
    		<block class="Magento\Framework\View\Element\Template" name="rtb" template="Magento_Cms::rtb.phtml" before="main.content" />
    	</referenceBlock>

        <!-- call banner -->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="banner" template="Magento_Cms::banner.phtml"  before="-"/>
    	</referenceContainer>

        <!-- call feature brand-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="feature.brand" template="Magento_Cms::featurebrand.phtml"  after="-"/>
    	</referenceContainer>

        <!-- call 2 titles-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="two.titles" template="Magento_Cms::twotitles.phtml"  before="feature.brand"/>
    	</referenceContainer>

        <!-- call insta-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="insta" template="Magento_Cms::insta.phtml"  before="two.titles"/>
    	</referenceContainer>

        <!-- call promo-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="promo" template="Magento_Cms::promo.phtml"  before="insta.titles"/>
    	</referenceContainer>

        <!-- call subcate-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="subcate" template="Magento_Cms::subcate.phtml"  before="promo"/>
    	</referenceContainer>

        <!-- call on sale-->
        <referenceContainer name="main">
			<block class="Magento\Framework\View\Element\Template" name="sale" template="Magento_Cms::sale.phtml"  before="subcate"/>
    	</referenceContainer>
        <!-- <move element="pharmacy.login" destination="header.container" before="top.search"/> -->
    </body>
</page>
